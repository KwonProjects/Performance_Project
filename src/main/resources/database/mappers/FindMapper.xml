<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.per.main.member.find.FindDAO">
	<select id="getMemberId" resultType="MemberDTO" parameterType="MemberDTO">
		SELECT ID
		  FROM MEMBER
		 WHERE NAME=#{name} AND EMAIL=#{email}
	</select>
 
    <select id="findPw" resultType="MemberDTO" parameterType="MemberDTO">
    	SELECT *
    	  FROM MEMBER
    	 WHERE ID=#{id} AND EMAIL=#{email}
    </select>
    
    <update id="updatePw" parameterType="MemberDTO">
    	UPDATE MEMBER SET PW=#{pw} WHERE ID=#{id}
    </update>    
    
  </mapper>